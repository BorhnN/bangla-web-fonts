{
    "plugins": [
        "theme-gestalt",
        "-theme-default",
        "styles-sass-fix",
        "prism",
        "canonical-link",
        "hide-published-with",
        "sharing",
        "sitemap",
        "back-to-top-button",
        "meta",
        "anchors",
        "edit-link",
        "forkmegithub"
    ],
    "pluginsConfig": {
        "theme-gestalt": {
            "logo": "https://maateen.me/img/avatar.jpg",			// path to the logo file to use in the sidebar
            "favicon": "https://cdn.maateen.me/img/favicon-en.ico",		// path to your favicon
            "baseUrl": null,				// sets the base url in the HTML head
            "excludeDefaultStyles": true,		// excludes the pre-compiled theme css in favor of your custom css
            "doNotHideChildrenChapters" : false		// in summary, disables hiding of child chapters for inactive chapter
        },
        "prism": {
            "css": [
                "prismjs/themes/prism-solarizedlight.css"
            ]
        },
        "canonical-link": {
            "baseURL": "https://fonts.maateen.me/"
        },
        "sharing": {
            "facebook": true,
            "twitter": true,
            "google": true,
            "weibo": false,
            "instapaper": false,
            "vk": false
        },
        "sitemap": {
            "hostname": "https://fonts.maateen.me/"
        },
        "meta": {
            "data": [
                {
                    "name": "keywords",
                    "content": "SolaimanLipi, SiyamRupali, Kalpurush"
                },
                {
                    "property": "fb:app_id",
                    "content": "117117302053445"
                },
                {
                    "property": "og:type",
                    "content": "article"
                },
                {
                    "property": "og:image",
                    "content": "https://fonts.maateen.me/images/charu-chandan-hard-stroke.jpg"
                }
            ]
        },
        "edit-link": {
            "base": "https://github.com/maateen/bangla-web-fonts/edit/master/",
            "label": "Edit This Page"
        },
        "forkmegithub": {
            "url": "https://github.com/maateen/bangla-web-fonts",
            "color": "gray"
        }
    }
}
